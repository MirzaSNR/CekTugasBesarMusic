<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    //tools:context=".activity_folder">


    <LinearLayout

        android:layout_width="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#333333">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:text="FOLDER"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-48dp"
            android:src="@drawable/logo_music"
            android:layout_gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="wrap_content"
            android:id="@+id/activity_track">

            <SearchView
                android:id="@+id/pencarian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/pencarian_listfolder"
                android:iconifiedByDefault="false"
                android:queryHint="PENCARIAN" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_grid_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pencarian"
                android:layout_marginTop="8dp">
                //tools:listitem="@layout/item_grid_folder">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>